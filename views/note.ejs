        <main>
  
           
                    <% console.log(noteData[0]) %>
            <section class='note-container'>
                <h2 >Single Note</h2>
                <h3 id='note-title'><%= noteData[0].title || '' %></h3>
                <h4 id='category-name'>category is this: <%= noteData[0].category_id %> </h3>
                <img src='<%= noteData[0].img_url %>'height="50" width="50" class='post-img'>
                <span id='user-name'> first_name is this: <%= noteData[0].first_name %></span>
                <div>
                    <span id='note-counnter'> rating is this: <%= noteData[0].rating_counter %></span>
                    <button type="button" id='bookmark-btn'>Bookmark</button>
                </div>  
                
            </section>


           
            <section class='comment-container'>
                <form class='new-comment' method="POST" action="/notes/:note_id/comment"> 
                    <h2> Comments</h2>
                    <div class="form-group">
                        <input type="text" name="comment-text" class="form-control" id="comment-text" placeholder="Add a comment...">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
                <% for(var i=0; i < data.length ; i++) { %>
                    
                <article class='posted-comments'> 
                    <header class='Pcomment_user_name'> 
                        <h3> commenter name <%= data[i].first_name %> </h3>
                    </header>
                    
                    <section class='Pcomment_text'>
                        <p> Some text: <%= data[i].comments %></p>
                    </section>

                    <footer class='Pcomment_date'>
                        <p> comment created at this time: <%= data[i].create_date %></p> 
                    </footer>
                </article>


            </section>
            
             <% } %>
        </main>

    </body>
